{
  "useTabs": false,
  "endOfLine": "lf",
  "tabWidth": 4,
  "semi": true,
  "printWidth": 100,
  "singleQuote": true,
  "quoteProps": "preserve",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "objectWrap": "preserve",
  "arrowParens": "always",
  "bracketSameLine": false,
  "proseWrap": "preserve",
  "singleAttributePerLine": true,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.json", "*.jsonc", "*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "objectWrap": "preserve"
      }
    },
    {
      "files": ["*.html", "*.svg", "*.xml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "objectWrap": "preserve"
      }
    },
    {
      "files": ["*.sh", "Dockerfile"],
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "objectWrap": "collapse",
        "proseWrap": "never"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": ["Makefile"],
      "options": {
        "tabWidth": 4,
        "useTabs": true
      }
    },
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "objectWrap": "collapse",
        "arrowParens": "always",
        "bracketSameLine": false
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "vueIndentScriptAndStyle": false
      }
    }
  ]
}
